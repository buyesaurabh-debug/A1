modules = ["ruby-3.2", "web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Rails Server"

[[workflows.workflow]]
name = "Rails Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bundle exec rails server -b 0.0.0.0 -p 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
NODE_OPTIONS = "--openssl-legacy-provider"
